{
  "manifest_version": 3,
  "name": "JSON Formatter",
  "version": "1.0",
  "description": "Make JSON more readable.",
  "options_page": "formatter.html",
  "action": {
    "default_title": "JSON Formatter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon-16.png",
    "32": "favicon-32.png",
    "48": "favicon-48.png",
    "128": "favicon-128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  }
}
